// .container
.calendar
	position relative
	z-index -10
	width 100%
	height 100%
	text-align center
	background url('i/bg-calendar.jpg')
	&::before
		content ""
		position absolute
		left 0
		right 0
		top -65px
		margin auto
		width 80%
		height 62px
		border-radius 100%
		box-shadow 0 0 30px 10px
	&::after
		content ""
		position absolute
		left 0
		right 0
		bottom -65px
		margin auto
		width 80%
		height 62px
		border-radius 100%
		box-shadow 0 0 30px 10px

	&__box
		margin 0 -10px
		// background green
	&__title
		padding 40px 0
		font-weight 500
		font-size 40px
		font-family 'ubuntu'
		color #fff
	&__list
		// width 1160px
		margin 0 auto
		text-align center
	&__item
		display inline-block
		margin 15px
		width 320px
		height 390px
		box-shadow 0 0 50px
		// background: green
	&__image
		position relative
		width 100%
		height auto
		// z-index 4
		&-container
			position relative
			width 320px
			height 194px
			// z-index: 3
		&-shadow
			position absolute
			background rgba(0, 0, 0, 0.5)
			top 0
			right 0
			bottom 0
			left 0
			// z-index 5
	&__city
		position absolute
		z-index 6
		top 15px
		left -3px
		padding 8px 30px 11px 32px
		font-weight bold
		font-size 18px
		font-family 'ubuntu'
		color #fff
		background #f23e35
	&__data
		position absolute
		z-index 7
		bottom 16px
		left 15px
		font-weight bold
		font-size 16px
		font-family 'ubuntu'
		color #fff
	&__content
		text-align left
		font-size 16px
		line-height 1.5
		background #fff
		color #323232
		&-name
			padding 25px 20px 0
			font-weight bold
			font-size 16px
			font-family 'ubuntu'
			// color #fff
		&-description
			padding 10px 20px 14px
			font-weight normal
			font-family 'ubuntu'
		&-see__all
			margin-top 60px
