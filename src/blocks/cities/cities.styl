.cities
	background #fff
	&__title
		margin 45px 0
		font-weight 500
		font-size 40px
		font-family 'ubuntu'
		text-align center
	&__item
		position relative
		// z-index 10
		display inline-block
		width 200px
		// width 20%
		margin 0 6px
		margin-bottom 50px
		text-align left
		vertical-align top
		background-color #fff
	&__image-block
		position relative
		margin-bottom 10px
		width 200px
		height 103px
		&:after
			position relative
			top -40px
			content ''
			display block
			z-index 0
			width 100%
			height 30px
			margin 0 auto
			border-radius 180px/30px
			box-shadow 0 0 30px
	&__image
		position relative
		// z-index 12
		width 100%
		height auto
		background-size cover
		&-container
			position relative
			// z-index 17
			margin-bottom 10px
			width 200px
			height 100%
			overflow hidden
			border 1px solid #e6e6e6
			border-radius 6px
		&-shadow
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			z-index 16
			background rgba(255, 255, 255, 0.6)
	&__item-tags
		margin-top 30px
		font-weight normal
		font-size 14px
		font-family 'exo_2'
		color #323232
	&__main
		width 100%
		display inline-block
		text-align center
		vertical-align middle
		position absolute
		z-index 19
		font-weight normal
		font-size 30px
		font-family 'exo_2'
		color #f23e35
		&-container
			position absolute
			top 0
			right 0
			bottom 0
			left 0
		&:after
			content ''
			height 100px
			display inline-block
			vertical-align middle
			background blue
			z-index 22
	&__subsidiary
		display inline-block
		margin-right 7px
		margin-bottom 9px
		padding 5px
		text-decoration none
		border 1px solid #e6e6e6
		border-radius 6px
		background #f5f5f5
		color #000
