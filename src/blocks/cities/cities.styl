.cities
  // width 1080px
  text-align center
  height: 481px
  margin 0 auto
  background #fff
.cities__title
  text-align center
  margin 45px 0
  font-family 'ubuntumedium'
  font-size 40px
.cities__list
  display inline-block
  // width 203px
.cities__item
  position relative
  z-index 10
  text-align left
  display inline-block
  width: 200px
  vertical-align top
  // background-color #fff
.cities__image-container
  position relative
  z-index 17
  width 200px
  height 112px
  overflow hidden
  border 1px solid #e6e6e6
  border-radius 6px
.cities__image
  position relative
  z-index 12
  margin-bottom 10px
  width 100%
  height auto
.cities__image-shadow
  position: absolute
  top 0
  z-index 16
  width 100%
  height 100%
  background rgba(255, 255, 255, 0.6)
.cities__after-shadow
  position absolute
  z-index 11
  bottom 25px
  margin 0 auto
  width 200px
  height 30px
  border-radius 180px/30px
  box-shadow 0 0 30px
.cities__main
  position absolute
  z-index 19
  top 50px
  left 25%
  font-family: 'exo_2medium';
  font-size 30px
  color: #f23e35
