.cities
	text-align center
	background #fff
	&__title
		margin 45px 0
		font-weight 500
		font-size 40px
		font-family 'ubuntu'
		text-align center
	&__list
		padding-bottom 50px
	&__item
		position relative
		// z-index 10
		display inline-block
		width 200px
		// width 20%
		margin 0 6px

		text-align left
		vertical-align top
		background-color #fff
	&__image
		position relative
		z-index 12
		width 100%
		height auto
		background-size cover
		&-shadow
			position absolute
			bottom  0
			z-index 1
			display block
			width 100%
			height 30px
			border-radius 180px/30px
			box-shadow 0 0 35px
			// background red
		&-block
			position relative
			margin-bottom 10px
			width 200px
			height 103px
		&-container
			position relative
			margin-bottom 10px
			width 200px
			height 100%
			overflow hidden
			border-radius 5px
	&__item
		&-tags
			margin-top 30px
			font-weight normal
			font-size 14px
			font-family 'exo_2'
			color #323232
	&__main
		position absolute
		z-index 50
		top 0
		left 0
		right 0
		bottom 0
		display inline-block
		text-align center
		vertical-align middle
		font-weight normal
		font-size 30px
		font-family 'exo_2'
		color #f23e35
		&:after
			content ''
			height 96%
			display inline-block
			vertical-align middle
		&-container
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			&:after
				content  ''
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				z-index 26
				overflow hidden
				background rgba(255,255,255,.6)
				border 1px solid #e6e6e6
				border-radius 5px
	&__subsidiary
		display inline-block
		margin-right 7px
		margin-bottom 9px
		padding 5px
		text-decoration none
		border 1px solid #e6e6e6
		border-radius 6px
		background #f5f5f5
		color #000

@media (max-width 425px)
	.cities
		text-align center
		&__title
			margin 55px 0
			line-height 1.2
			font-size 30px
		&__item
			width 80%
			margin-bottom 30px
			// backgroun dblue
		&__image
			display block
			width 100%
			height auto
			&-block
				width 100%
				height auto
			&-container

				width 100%
				height auto
		&__item
			&-tags
				text-align center
