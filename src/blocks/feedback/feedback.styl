@media (max-width 320px)
	.feedback
		&__name
			font-size 26px
			&-description
				font-size 14px
		&__input-email
			width 80%
		&__deal-button
			width 80%
		&__info
			width 80%
			// margin 10px auto
			margin-top 0
			margin-left auto
			margin-right auto
			margin-bottom 20px
			padding-top 0

@media (max-width 355px)
	.feedback
		&__forms
			width 90%
@media (max-width 574px)
	.feedback
		&__forms
			width 80%
		&__name
			&-description
				font-size 16px
@media (max-width 657px)
	.feedback
		&__image
			width 50%
		&__forms
			padding-top 20px
			text-align center
		&__name
			font-size 30px
			&-description
				width 80%
				margin 10px auto
		&__user-email
			font-size 16px
			span
				display block
				padding 10px 0
		&__input-email
			width 90%
			margin-left  0
		&__deal-button
			width 90%
			margin-left 0
			margin 10px 0
			font-size 20px
		&__info
			padding-left 0

@media (max-width 704px)
	.feedback
		&__image
			width 30%
			// margin-top 55px
		// &__forms
		// 	width 58%
		&__deal-button
			font-size 14px

@media (max-width 817px)
	.feedback
		&__deal-button
			font-size 16px

@media (max-width 920px)
	.feedback
		&__forms
			width 60%
		&__input-email
			width 38%
		&__deal-button
			width 40%
			height 40px
			font-size 20px
