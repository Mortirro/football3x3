.feedback
	text-align center
	background #000
	color #fff
	&__image
		margin-top 45px
		// margin-left 30%
		width 240px
		height auto
	&__forms
		text-align left
		display inline-block
		vertical-align top
		padding-top 50px
		// padding-left 25px
	&__name
		font-weight 500
		font-size 40px
		font-family 'ubuntu'
	&__name-description
		margin 20px 0
		font-weight 500
		font-size 20px
		font-family 'ubuntu'
	&__user-email
		font-weight bold
		font-size 19px
		font-family 'ubuntu'
	&__input-email
		// *margin-left  15px
		height 40px
		width 315px
		border-radius 5px
		border 0
	&__deal-button
		// margin-top 27px
		margin-left  19px
		padding 2px 30px
		font-weight bold
		font-size 25px
		font-family 'exo_2'
		border-radius 6px
		background #f23e35
	&__info
		padding-top 10px
		padding-left 70px
		font-weight bold
		font-size 12px
		font-family 'ubuntu'
		margin-bottom 50px
