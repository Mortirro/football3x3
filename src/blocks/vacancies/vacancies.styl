.vacancies
	margin 0 auto
	width 50%
	&__header
		margin 55px 0 35px
		font-weight normal
		font-size 25px
		font-family "ubuntu"
		color #fffefe
	&__name
		display block
		width: 100%
		font-weight 400
		font-size 16px
		line-height 46px
		font-family "ubuntu"
		text-align left
		text-decoration none
		color #8e9197

@media (max-width 500px)
	.vacancies
		width 100%
		// background: blue
		&__header
			text-align center
		&__name
			margin-left 15%
