.footer
	&__contacts
		float left
		background #43474e
		width 100%
		&::after
			display inline-block
			content ""
			height 96%
			vertical-align top
	&__col
		display inline-block
		width 33%
		vertical-align top
		font-weight 400
		font-size 16px
		font-family "ubuntu"
		text-align left
		color #8e9197
	&__contacts-name
		margin 55px 0 35px
		font-weight normal
		font-size 25px
		font-family "ubuntu"
		color #fffefe
	&__contacts-email,
	&__contacts-tel,
	&__contacts-address,
	&__contacts-city
		text-decoration none
		color #8e9197
	&__football-button
		position fixed /*позиционирование кнопки фиксированное*/
		z-index 99 /*отображаем поверх всех элементов*/
		bottom: 0% /*положение снизу*/
		right 0% /*положение справа*/
		color #fff /*цвет текста*/
		padding 10px /*внутренние отступы*/
		margin: 5px 15px 15px 5px; /*внешние отступы*/
		margin-right 30px
		margin-bottom 400px
		&:hover
			opacity 1
