.footer
	&__contacts
		padding-top 55px
		padding-left 100px
		padding-right 100px
		padding-bottom 35px
		float left
		background #43474e
		width 100%
		&::after
			display inline-block
			content ""
			height 96%
			vertical-align top

		@media md
			padding-left 80px
			padding-right 80px
		@media desktop
			padding-left 50px
			padding-right 50px
		@media tablet
			padding-left 40px
			padding-right 40px
		@media phone
			padding-left 0
			padding-right 0
	&__col
		display inline-block
		width 33%
		vertical-align top
		font-weight 400
		font-size 16px
		font-family "ubuntu"
		text-align left
		color #8e9197

		@media tablet
			width 31%
		@media phone
			width 100%
			// text-align center

	&__contacts
		&-name
			font-weight normal
			font-size 25px
			font-family "ubuntu"
			color #fffefe
		&-item
			margin 5px 0
		&-email
		&-tel
		&-address
		&-city
			text-decoration none
			color #8e9197

