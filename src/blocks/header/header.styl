.header
	display block
	text-align right
	background #323232
	&__box
		// background rgb(104, 71, 201)
		&::after
			content ""
			height 96%
	&__logo
		position relative
		top 15px
		float left
		// background green
		&-image
			height 100%
			width auto
	&__menu
		padding 23px 0
		&-list
			text-align center
			text-decoration none
		&-item
			display inline-block
			// background yellow
		&-link
			padding-left 20px
			text-decoration none
			font-weight normal
			font-size 16px
			font-family 'exo_2'
			color #fff
			// background blue
