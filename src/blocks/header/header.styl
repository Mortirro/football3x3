.header
	display block
	// text-align right
	background #323232
	@media phone
		&.active
			.header
				&__toggle
					background transparent
					&:before
						transform rotate(45deg) translate(5px, 6px)
					&:after
						transform rotate(-45deg) translate(5px, -6px)
				&__menu
					position absolute
					top 70px
					display block
					width 100%
					padding 0
					background rgba(#323232, 1)
					&-list
						// margin 20px 0
						padding-left 0
					&-item
						display block
						width 100%
						margin 10px 0
						border-bottom 1px solid rgba(255,255,255,0.2)
					&-link
						font-size 22px

	&__box
		@media phone
			height 80px
		&::after
			content ""
			height 96%
	&__logo
		position relative
		top 15px
		float left
		@media phone
			width 100%
			text-align center
		// background green
		&-image
			height 100%
			width auto
			@media phone
				width 170px
	&__menu
		padding 23px 0
		@media phone
			display none
			position absolute
			top 100%
			left 0
			right 0
			background yellow
			z-index 100
		&-list
			padding-left 0
			text-align center
			text-decoration none
		&-item
			position relative
			display inline-block
			padding 0 10px
		&-link
			text-decoration none
			font-weight normal
			font-size 16px
			font-family 'exo_2'
			color #fff
			&:focus
			&:link
			&:active
			&:hover
				color #f23e35



	&__toggle
		display none
		float right
		width 40px
		height @width
		@media phone
			position absolute
			z-index 100
			right 30px
			top 35px
			display block
			width 20px
			height 3px
			background #fff
			transition all .2s ease-in-out

			&:before
			&:after
				position absolute
				background: #fff
				content: ''
				width: 20px
				height 3px
				transition all .2s ease-in-out
			&:before
				top -8px
			&:after
				top 8px



