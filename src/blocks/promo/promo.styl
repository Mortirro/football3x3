@media (max-width 391px)
	.promo
		&__title
			margin-top 30px
			font-size 30px
		&__text
			width 100%
			line-height 1.3
		&__button
			font-size 20px

@media (max-width 450px)
	.promo
		&__title
			font-size 40px
		&__text
			font-size 25px
		&__button
			width 80%
			padding 10px

@media (max-width 600px)
	.promo
		&__title
			width 80%
		&__text
			width 80%

@media (max-width 1024px)
	.promo
		&__title
			width 90%
			margin-left auto
			margin-right auto
		&__text
			margin-left auto
			margin-right auto
