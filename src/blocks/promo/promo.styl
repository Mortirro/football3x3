.promo
	position relative
	width 100%
	background url('i/bg-promo2.jpg') no-repeat center center
	background-size cover
	&__sponsors
		display inline-block
		vertical-align middle
		width 20%
		font-weight bold
		font-size 18px
		line-height 1
		text-transform uppercase
		font-family "ubuntu"
		color #fff
		@media md
			font-size 16px
		@media sm
			font-size 14px
		@media tablet
			width 100%
			margin 30px 0 15px
			text-align center
		@media phone
			width 100%
			text-align center

		&-box
			position absolute
			top 20px
			left 14%
			right 14%
			// background green
			@media sm
				left 10%
				right 10%
			@media tablet
				left 5%
				right 5%
			@media phone
				left 5%
				right 5%



			&::after
				display inline-block
				vertical-align middle
				content ""
				height 96%
		&-names
			display inline-block
			vertical-align middle
			width 60%
			text-align center
			@media tablet
				width 100%
			@media phone
				width 100%
				margin 10px 0
		&-item
			margin 0
			padding 0 10px


		&-image
			height 70px
			width auto
			@media md
				height 50px
			@media sm
				height 50px
			@media tablet
				height 70px
				margin 10px 0
			@media phone
				height 50px

	&__button-container
		display inline-block
		// text-align right
		// width 18%
		@media tablet
			margin 30px 0
			display block
			text-align center
		@media phone
			display block
			margin 20px auto 10px
			// margin-left auto
			// margin-right auto
			max-width 300px

	&__become-sponsors
		padding  8px
		font-size 18px
		text-transform uppercase

		border 2px solid
		border-radius 5px
		background none
		@media md
			font-size 16px
		@media sm
			font-size 14px
		@media phone
			width 100%

	&__play-button
		background rgba(0, 0, 0, 0.4)
		border-radius 50%
		fit-image()
		&-row
			position absolute
			top 140px
			left 0
			right 0
			// @media sm
			// 	margin-top 170px
			@media phone_tablet
				margin-top 170px

	&__info
		padding-top 275px
		padding-bottom 50px
		text-align center
		@media phone_tablet
			padding-top 400px
	&__content
		margin 10px 0
		font-family "ubuntu"
		color #fff
		// @media phone
		// 	margin 10px 0
		&-title
			padding 0 10px
			font-weight 500
			font-size 45px
			text-transform uppercase
			@media tablet
				font-size 40px
			@media phone
				// padding 0 10px
				font-size 35px

		&-text
			margin-top 25px
			font-weight 400
			line-height 38px
			font-size 30px
			@media phone
				margin-left 20px
				margin-right 20px
				font-size 24px
	&__button
		padding 10px 70px
		text-decoration none
		text-transform uppercase
		@media phone
			padding 10px 40px
			font-size 22px
		&-row
			margin-top 70px
			text-align center
	&__bg-video
		border 1px solid
