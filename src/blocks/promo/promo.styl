.promo
	// background grey
	background url('i/bg-promo.jpg') no-repeat center center
	background-size cover

	&__shadow
		background-color rgba(0, 0, 0, 0.8)
	&__sponsors
		// background-color blue
		display inline-block
		vertical-align middle
		width 200px
		font-weight bold
		font-size 18px
		line-height 1
		font-family "ubuntu"
		color #fff
		&-box
			display inline-block
			width 100%
			padding-top 20px
			// background red
			&::after
				display inline-block
				vertical-align middle
				content ""
				height 96%
		&-names
			// background green
			display inline-block
			vertical-align middle
			text-align center
	&-item
		// background grey
		margin 0
		padding 0 10px
	&__button-container
		display inline-block
		// vertical-align middle
		text-align right
		width 20%
		// background grey
	&__become-sponsors
		padding  8px 10px
		font-size 18px
		border 2px solid
		border-radius 5px
		background none
	&__content
		text-align center
	&__play-button
		margin-top 40px
		background rgba(0, 0, 0, 0.4)
		border-radius 50%
	&__title
		margin-top 60px
		font-weight 500
		font-size 45px
		font-family "ubuntu"
		color #fff
	&__text
		margin-top 24px
		font-weight 400
		line-height 38px
		font-size 30px
		font-family "ubuntu"
		color #fff
	&__button
		display inline-block
		vertical-align middle
		margin 45px 0
		padding 10px 70px
		text-decoration none
	&__bg-video
		border 1px solid
