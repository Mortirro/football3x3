.testimonials
	// padding 40px 0
	// margin 0 auto
	text-align center
	background-color #f9f9f9
	&__title
		font-size 40px
	&__list
		width 90%
		margin 0 auto
		text-align center
		font-size 15px
		clearfix()
	&__item
		float left
		width 33%
		margin 0 6px
		padding 10px
		text-align left
		background-color #fff
		border-radius 16px
		border solid 1px #d9d9d9
	&__image
		width 100%
		height auto
		&-container
			float left
			margin 10px 15px
			overflow hidden
			width 38px
			height 38px
			border-radius 4px
	&__name
		margin-top 5px
		display inline-block
		font-size 18px
	&__date
		display block
		color #adadad
		font-size 15px
	&__social-container
		margin-top 10px
	&__socialImage
		float left
		margin-left 28px
	&__link-contatner
		display: inline-block
		margin-left 5px
	&__company
		display: inline-block
		font-size 15px
	&__text
		margin 12px 12px 20px 24px
	&__shadow
		position relative
		margin 0 auto
		margin-top -40px
		z-index -1
		width 314px
		height 30px
		border-radius 1000px/100px
		-webkit-box-shadow 0 0 30px
		-moz-box-shadow 0 0 30px
		box-shadow 0 0 30px
