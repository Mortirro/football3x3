.testimonials
	position relative
	z-index -2
	width 1080px
	height 340px
	margin 0 auto
	text-align center
	font-size 40px
	background-color #f9f9f9
.testimonials__list
	font-size 15px
.testimonials__item
	position relative
	text-align left
	display inline-block
	background-color #fff
	width 346px
	height 177px
	border-radius 16px
	border solid 1px #d9d9d9
.testimonials__image-container
	position absolute
	top 13px
	left 28px
	float left
	display block
	position relative
	overflow hidden
	width 38px
	height 38px
	border-radius 4px
.testimonials__image
	width 100%
	height auto
.testimonials__name
	margin-top 5px
	margin-left 48px
	display inline-block
	font-size 18px
.testimonials__date
	display block
	margin-left 85px
	color #adadad
	font-size 15px
.testimonials__social-container
	margin-top 10px
.testimonials__socialImage
	float left
	margin-left 28px
.testimonials__link-contatner
	display: inline-block
	margin-left 5px
.testimonials__company
	display: inline-block
	font-size 15px
.testimonials__text
	margin 12px 12px 20px 25px
.testimonials__shadow
	position relative
	margin 0 auto
	margin-top -40px
	z-index -1
	width 314px
	height 30px
	border-radius 1000px/100px
	-webkit-box-shadow 0 0 30px
	-moz-box-shadow 0 0 30px
	box-shadow 0 0 30px
