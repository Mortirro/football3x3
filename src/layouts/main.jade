extends root

block root
	+b("header").header: +i
	
	main.main
		block main
			!= content
	
	unless file.hideFooter
		+b("footer").footer Footer

block fonts
	link(href='http://fonts.googleapis.com/css?family=Fira+Sans:400,400italic|Roboto:400,700,400italic&subset=latin,cyrillic' rel='stylesheet' type='text/css')

block styles
	link(rel="stylesheet", href=asset("football3x3.min.css"))

block scripts
	script(src=asset("jquery-3.1.0.min.js") defer)
	script(src=asset("football3x3.min.js") defer)
